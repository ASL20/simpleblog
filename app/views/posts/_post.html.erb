<div class="col-md-12 border rounded mb-4">
  <div class="my-3 mx-1">
    <div class="row">
      <div class="col-md-9">
        <h2><%= link_to post.title, post_path(post), class: 'link' %></h2>
      </div>
      <div class="col-md-3 text-right">
        <p>
          <%= post.created_at.strftime("%H:%M %d.%m.%Y") %>
        </p>
      </div>
    </div>
    <div>
      <%= post.content %>
    </div>
    <div class="mt-2 text-right">
      <p><%= link_to "Автор: #{post.user.username}", post.user, class: 'badge badge-secondary' %></p>
    </div>
  </div>
</div>
